@model Slider
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    <div class="form-group">
                        <h2>@Model.Title</h2>
                    </div>
                    <div class="form-group">
                        <h4>@Model.SubTitle</h4>
                    </div>
                    <div class="form-group">
                        <img style="width:100px;height:100px;object-fit:cover" src="~/img/slider/@Model.Image" />
                    </div>
                    <a asp-action="Index" class="btn btn-light">Go Back</a>
                </form>
            </div>
        </div>
    </div>
</div>