@model List<Slider>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Sliders</h4>
                    <a asp-action="Create" class="btn btn-primary text-white btn-rounded">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Status</th>
                                <th class="text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider slider in Model)
                            {
                                <tr>
                                    <td>
                                        <img style="width:100px;height:100px;object-fit:cover" src="~/img/slider/@slider.Image" />
                                    </td>
                                    <td>@slider.Title</td>
                                    <td>
                                        @if (slider.IsDeactive)
                                        {
                                            <span class="text-danger">Deactive</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                    <td class="d-flex justify-content-end">
                                        <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-warning text-white btn-rounded mx-2">Detail</a>
                                        <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-success text-white btn-rounded mx-2">Update</a>
                                        @if (slider.IsDeactive)
                                        {
                                            <a asp-action="Activity" asp-route-id="@slider.Id" class="btn btn-success text-white btn-rounded">Activade</a>

                                        }
                                        else
                                        {
                                            <a asp-action="Activity" asp-route-id="@slider.Id" class="btn btn-danger text-white btn-rounded">Deactivade</a>

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}